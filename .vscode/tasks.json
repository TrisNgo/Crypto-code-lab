{
    "version": "2.0.0",
    "tasks": [
    {
    "type": "cppbuild",//"shell"
    "label": "C/C++: g++ build active file",
    "command": "/usr/bin/g++",
    "args": [
    "-g2",
    "-O3",//optimal het tai nguyen cua os
    "-DNDEBUG",//cho phep debug
    "${file}",
    "-o",
    "${fileDirname}/${fileBasenameNoExtension}",
    "-pthread",//cho phep chay da luon
    "-L${workspaceFolder}/lib",
    "-l:libcryptopp.a",
    "-Wall",//optimal
    ],
    "options": {
    "cwd": "${workspaceFolder}"
    },
    "problemMatcher": [
    "$gcc"
    ],
    "group": "build",
    "detail": "compiler: /usr/bin/g++"
    }
    ]
}